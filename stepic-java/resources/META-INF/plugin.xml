<idea-plugin version="2">
    <id>org.stepic.plugin.id</id>
    <name>Stepic java submitter</name>
    <version>0.0.1</version>
    <vendor email="petr.bogdanov@stepic.org" url="http://www.stepic.org">Stepic.org</vendor>

    <description><![CDATA[
      Stepic plugin for code challenges on Java.<br>
      To use this plugin you have to have Stepic account and follow the course.<br>
    ]]></description>

    <!--<change-notes><![CDATA[-->
      <!--Add change notes here.<br>-->
      <!--<em>most HTML tags may be used</em>-->
    <!--]]>-->
    <!--</change-notes>-->

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <depends>com.intellij.modules.lang</depends>
    <depends>com.jetbrains.edu.interactivelearning</depends>
    <depends>com.jetbrains.edu.intellij</depends>

    <extensions defaultExtensionNs="com.intellij">
        <treeStructureProvider implementation="org.stepic.plugin.java.StepicTreeStructureProvider" order="last"/>
        <!--<moduleBuilder builderClass="org.stepic.plugin.java.project.wizard.StepicJavaModuleBuilder" id="java.stepic.builder" order="first"/>-->
        <applicationConfigurable instance="org.stepic.plugin.java.ui.StepicSettingsConfigurable"/>
        <applicationService serviceInterface="org.stepic.plugin.java.ui.StepicSettings"
                            serviceImplementation="org.stepic.plugin.java.ui.StepicSettings"/>
    </extensions>

    <extensions defaultExtensionNs="Edu">
        <StudyLanguageManager implementationClass="org.stepic.plugin.java.StepicJavaLanguageManager" language="JAVA"/>
        <studyPluginConfigurator implementation="org.stepic.plugin.java.StepicJavaPluginConfigurator"/>
        <!--<optionsProvider instance="com.jetbrains.edu.learning.stepic.StepicStudyOptions"/>-->
        <!--<optionsProvider instance="org.stepic.plugin.java.project.wizard.StepicStudyOptions"/>-->
    </extensions>

    <extensions defaultExtensionNs="com.jetbrains.edu.intellij">
        <eduIntelliJProjectTemplate implementation="org.stepic.plugin.java.StepicJavaProjectTemplate"/>
        <courseConfigurator language="JAVA" implementationClass="org.stepic.plugin.java.StepicJavaCourseConfigurator"/>
    </extensions>



    <actions>
        <action id="EduJavaCheckAction" class="org.stepic.plugin.java.actions.EduJavaCheckAction" text="Edu Java Check"/>
    </actions>

</idea-plugin>